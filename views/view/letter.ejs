<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A Letter for <%= proposal.recipient_name %> ðŸ’Œ</title>
    <meta property="og:title" content="Someone has written you a love letter ðŸ’Œ">
    <meta property="og:description" content="Break the seal to read a heartfelt message.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="view-page letter-view">
    <div class="letter-scene">
        <div class="desk-bg"></div>

        <!-- Envelope -->
        <div class="envelope <%= content.sealColor %>-seal" id="envelope" onclick="openEnvelope()">
            <div class="envelope-flap"></div>
            <div class="envelope-body">
                <p class="envelope-to">To: <%= proposal.recipient_name %>
                </p>
            </div>
            <div class="wax-seal <%= content.sealColor %>">
                <span class="seal-letter">
                    <%= proposal.sender_name.charAt(0).toUpperCase() %>
                </span>
            </div>
            <p class="envelope-instruction">Click the seal to open</p>
        </div>

        <!-- Letter -->
        <div class="letter-paper hidden" id="letterPaper">
            <div class="letter-content">
                <p class="letter-greeting">Dearest <%= proposal.recipient_name %>,</p>
                <div class="letter-body" id="letterBody"></div>
                <p class="letter-signature">
                    <%= content.signature %>
                </p>
            </div>

            <div class="letter-response">
                <p class="response-prompt">Will you be my Valentine?</p>
                <div class="response-buttons">
                    <button class="btn btn-accept" onclick="respond('accepted')">ðŸ’• Yes, I Will</button>
                    <button class="btn btn-reject" onclick="respond('rejected')">ðŸ’” Not This Time</button>
                </div>
            </div>
        </div>

        <!-- Response Confirmation -->
        <div class="response-overlay hidden" id="responseOverlay">
            <div class="hearts-float"></div>
        </div>
    </div>

    <!-- Gift Display -->
    <%- include('../partials/gift-display') %>

        <script>
            const letterText = `<%= content.letter.replace(/\n/g, '<br>').replace(/'/g, "\\'") %>`;
            const proposalId = '<%= proposal.unique_id %>';

            function openEnvelope() {
                // ... (existing code, ensure it matches original) ...
                const envelope = document.getElementById('envelope');
                if (envelope.classList.contains('opened')) return;

                envelope.classList.add('opening');

                setTimeout(() => {
                    envelope.classList.add('opened');
                    envelope.classList.add('hidden');

                    const paper = document.getElementById('letterPaper');
                    paper.classList.remove('hidden');
                    paper.classList.add('unfolding');

                    // Typewriter effect for letter
                    setTimeout(() => {
                        typewriterEffect(letterText);
                    }, 800);
                }, 1200);
            }

            function typewriterEffect(text) {
                // ... (existing code) ...
                const container = document.getElementById('letterBody');
                container.innerHTML = '';

                let i = 0;
                const speed = 30; // ms per character

                function type() {
                    if (i < text.length) {
                        if (text.substring(i, i + 4) === '<br>') {
                            container.innerHTML += '<br>';
                            i += 4;
                        } else {
                            container.innerHTML += text.charAt(i);
                            i++;
                        }
                        setTimeout(type, speed);
                    }
                }

                type();
            }

            async function respond(status) {
                try {
                    await fetch('/api/respond/' + proposalId, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ status })
                    });

                    const overlay = document.getElementById('responseOverlay');
                    overlay.classList.remove('hidden');

                    if (status === 'accepted') {
                        overlay.innerHTML = '<div class="hearts-float"></div><div class="response-confirmation"><h1>ðŸ’•</h1><p>Your heart has spoken</p></div>';
                        createFloatingHearts();

                        // Show gift reveal if accepted
                        setTimeout(() => {
                            if (typeof showGiftReveal === 'function') {
                                showGiftReveal();
                            }
                        }, 3000);
                    } else {
                        overlay.innerHTML = '<div class="response-confirmation"><h1>ðŸ’”</h1><p>Perhaps another time...</p></div>';
                    }
                } catch (err) {
                    alert('Failed to send response');
                }
            }

            function createFloatingHearts() {
                const overlay = document.getElementById('responseOverlay');
                for (let i = 0; i < 20; i++) {
                    const heart = document.createElement('div');
                    heart.className = 'floating-heart';
                    heart.textContent = 'â¤ï¸';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.animationDelay = Math.random() * 3 + 's';
                    heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
                    overlay.appendChild(heart);
                }
            }
        </script>
</body>

</html>