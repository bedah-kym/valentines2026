<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A Letter for <%= proposal.recipient_name %></title>
    <meta property="og:title" content="Someone has written you a love letter">
    <meta property="og:description" content="Break the seal to read a heartfelt message.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="view-page letter-view">
    <%- include('../partials/lock', { lockInfo, proposalId: proposal.unique_id }) %>
    <div class="letter-scene">
        <div class="desk-bg"></div>

        <div class="start-overlay" id="letterStart">
            <div class="start-card">
                <div class="start-title">A sealed letter for you</div>
                <p class="start-copy">Tap the seal to open it. You can skip the typing if you want.</p>
                <div class="start-actions">
                    <button class="btn btn-primary" id="startLetter">Open letter</button>
                </div>
            </div>
        </div>

        <div class="envelope <%= content.sealColor %>-seal" id="envelope" onclick="openEnvelope()">
            <div class="envelope-flap"></div>
            <div class="envelope-body">
                <p class="envelope-to">To: <%= proposal.recipient_name %>
                </p>
            </div>
            <div class="wax-seal <%= content.sealColor %>">
                <span class="seal-letter">
                    <%= proposal.sender_name.charAt(0).toUpperCase() %>
                </span>
            </div>
            <p class="envelope-instruction">Tap the seal to open</p>
        </div>

        <div class="letter-paper hidden" id="letterPaper">
            <div class="letter-content">
                <p class="letter-greeting">Dearest <%= proposal.recipient_name %>,</p>
                <div class="letter-body" id="letterBody"></div>
                <button class="btn btn-secondary skip-typing hidden" id="skipTyping">Skip typing</button>
                <p class="letter-signature">
                    <%= content.signature %>
                </p>
            </div>

            <%- include('../partials/audio-note') %>

            <div class="letter-response">
                <p class="response-prompt">Will you be my Valentine?</p>
                <div class="note-input-section">
                    <textarea id="responseNote" class="note-textarea"
                        placeholder="Write a little note back... (optional)"></textarea>
                </div>
                <div class="response-buttons">
                    <button class="btn btn-accept" onclick="respond('accepted')">Yes, I will</button>
                    <button class="btn btn-reject" onclick="respond('rejected')">Not this time</button>
                </div>
            </div>
        </div>

        <div class="response-overlay hidden" id="responseOverlay">
            <div class="hearts-float"></div>
        </div>
    </div>

    <div class="acceptance-overlay hidden" id="acceptanceOverlay">
        <div class="stroke-text">I choose you</div>
        <div class="burst-hearts" id="burstHearts"></div>
    </div>

    <%- include('../partials/gift-display') %>

    <script>
        const letterText = <%- JSON.stringify(content.letter || '') %>;
        const proposalId = '<%= proposal.unique_id %>';
        let typingTimer = null;
        let typingActive = false;

        function renderFullLetter() {
            const container = document.getElementById('letterBody');
            if (!container) return;
            container.innerHTML = '';
            const lines = letterText.split('\n');
            lines.forEach((line, index) => {
                if (index > 0) {
                    container.appendChild(document.createElement('br'));
                }
                container.appendChild(document.createTextNode(line));
            });
        }

        function typewriterEffect(text) {
            const container = document.getElementById('letterBody');
            if (!container) return;
            container.innerHTML = '';

            let i = 0;
            const speed = 28;
            typingActive = true;

            function type() {
                if (i < text.length) {
                    const char = text.charAt(i);
                    if (char === '\n') {
                        container.appendChild(document.createElement('br'));
                    } else {
                        container.appendChild(document.createTextNode(char));
                    }
                    i++;
                    typingTimer = setTimeout(type, speed);
                } else {
                    typingActive = false;
                    hideSkipTyping();
                }
            }

            type();
        }

        function showSkipTyping() {
            const skipBtn = document.getElementById('skipTyping');
            if (skipBtn) skipBtn.classList.remove('hidden');
        }

        function hideSkipTyping() {
            const skipBtn = document.getElementById('skipTyping');
            if (skipBtn) skipBtn.classList.add('hidden');
        }

        function skipTyping() {
            if (!typingActive) return;
            if (typingTimer) clearTimeout(typingTimer);
            typingActive = false;
            renderFullLetter();
            hideSkipTyping();
        }

        function openEnvelope() {
            const envelope = document.getElementById('envelope');
            if (envelope.classList.contains('opened')) return;

            envelope.classList.add('opening');

            setTimeout(() => {
                envelope.classList.add('opened');
                envelope.classList.add('hidden');

                const paper = document.getElementById('letterPaper');
                paper.classList.remove('hidden');
                paper.classList.add('unfolding');

                setTimeout(() => {
                    showSkipTyping();
                    typewriterEffect(letterText);
                }, 800);
            }, 1200);
        }

        function startLetter() {
            const overlay = document.getElementById('letterStart');
            overlay?.classList.add('hidden');
            openEnvelope();
        }

        document.getElementById('startLetter')?.addEventListener('click', startLetter);
        document.getElementById('letterStart')?.addEventListener('click', (event) => {
            if (event.target && event.target.id === 'letterStart') {
                startLetter();
            }
        });
        document.getElementById('skipTyping')?.addEventListener('click', skipTyping);

        function showAcceptanceOverlay() {
            const overlay = document.getElementById('acceptanceOverlay');
            const burst = document.getElementById('burstHearts');
            if (!overlay || !burst) return;
            burst.innerHTML = '';
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.className = 'burst-heart';
                heart.innerHTML = '&#10084;';
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 0.5 + 's';
                burst.appendChild(heart);
            }
            overlay.classList.remove('hidden');
            setTimeout(() => overlay.classList.add('hidden'), 2200);
        }

        async function respond(status) {
            const note = document.getElementById('responseNote').value;
            try {
                const res = await fetch('/api/respond/' + proposalId, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status, note })
                });
                if (!res.ok) {
                    throw new Error('Response failed');
                }
            } catch (err) {
                alert('Failed to send response');
                return;
            }

            try {
                const overlay = document.getElementById('responseOverlay');
                overlay.classList.remove('hidden');

                if (status === 'accepted') {
                    overlay.innerHTML = '<div class="hearts-float"></div><div class="response-confirmation"><h1>&#10084;</h1><p>Your heart has spoken</p></div>';
                    showAcceptanceOverlay();

                    setTimeout(() => {
                        if (typeof showGiftReveal === 'function') {
                            showGiftReveal();
                        }
                    }, 3000);
                } else {
                    overlay.innerHTML = '<div class="response-confirmation"><h1>&#128148;</h1><p>Perhaps another time...</p></div>';
                }
            } catch (err) {
                console.error('UI update error:', err);
            }
        }
    </script>
</body>

</html>
